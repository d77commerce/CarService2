        <Label Content="Order / Task No :" HorizontalAlignment="Left" Height="28" Margin="25,254,0,0" VerticalAlignment="Top" Width="105"/>
        <Button x:Name="Add_to_db_Copy" HorizontalAlignment="Left" Margin="542,302,0,0" VerticalAlignment="Top" Height="30" Width="180" Content="Save Task as done" FontWeight="Bold" FontSize="20" Background="#FFF9F9F9">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <CheckBox Content="Automatic" HorizontalAlignment="Left" Margin="679,120,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="customerName_textbox" HorizontalAlignment="Left" Margin="25,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Height="30" FontSize="18" FontWeight="Bold"/>

