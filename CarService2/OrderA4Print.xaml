            <Label Content="Oil filter" Width="60" HorizontalAlignment="Left" Canvas.Left="360" Canvas.Top="495" VerticalAlignment="Center"/>
            <Label Content="Air filter" Width="60" HorizontalAlignment="Left" Canvas.Left="48" Canvas.Top="599" VerticalAlignment="Top"/>
            <Label Content="Cabin filter" Width="67" HorizontalAlignment="Left" Canvas.Left="250" Canvas.Top="599" VerticalAlignment="Top"/>
            <TextBox x:Name="oilFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="417" Canvas.Top="500" Width="55" BorderBrush="{x:Null}" TextChanged="oilFilter_texBox_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Top"/>
