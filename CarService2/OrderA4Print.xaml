<Page x:Class="CarService2.OrderA4Print"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarService2"
      mc:Ignorable="d" 
     Width="793.701" Height="1122.520"
      Title="OrderA4Print" Background="White">

    <Grid>
        <Canvas Margin="0,-2,0,2">

            <Border BorderBrush="Black" BorderThickness="1" Height="95" Canvas.Left="157" Canvas.Top="45" Width="408" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Border BorderBrush="Black" BorderThickness="1" Height="58" Canvas.Left="20" Canvas.Top="578" Width="741" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="160" Canvas.Left="20" Canvas.Top="394" Width="741" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Date :" Width="40" HorizontalAlignment="Left" Canvas.Left="596" Canvas.Top="75" VerticalAlignment="Center"/>
            <TextBox x:Name="date" TextWrapping="Wrap" Text="01.01.23" Width="70" TextChanged="date_TextChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Canvas.Left="672" Canvas.Top="81" VerticalAlignment="Center" Height="20"/>
            <Canvas Height="26" Width="336" HorizontalAlignment="Left" Canvas.Left="20" Canvas.Top="433" VerticalAlignment="Top">
                <Label Content="Engine oil :" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="12"/>
                <Label Content="Brand" Width="48" HorizontalAlignment="Left" Canvas.Left="146" VerticalAlignment="Center"/>
                <TextBox x:Name="brand_oil_textBox" TextWrapping="Wrap" Text="No" Width="88" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="221" Canvas.Top="4" VerticalAlignment="Center" TextChanged="brand_oil_textBox_TextChanged"/>
