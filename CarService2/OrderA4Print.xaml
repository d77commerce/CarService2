            </Canvas>
            <Canvas Height="26" Width="319" HorizontalAlignment="Left" Canvas.Left="21" Canvas.Top="475" VerticalAlignment="Center">
                <Label Content="Gear Box oil" Width="77" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="gearOil_spec_textBox" TextWrapping="Wrap" Text="No" Width="55" FontWeight="Bold" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Canvas.Left="77" Canvas.Top="4" VerticalAlignment="Center" BorderBrush="{x:Null}" TextChanged="gearOil_spec_textBox_TextChanged"/>
                <Label Content="Brand" Width="43" HorizontalAlignment="Left" Canvas.Left="146" VerticalAlignment="Center"/>
                <TextBox x:Name="brand_gearOil_textBox" TextWrapping="Wrap" Text="No" Width="88" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="221" Canvas.Top="4" VerticalAlignment="Center" TextChanged="brand_gearOil_textBox_TextChanged"/>

            </Canvas>
            <Canvas Height="26" Width="329" HorizontalAlignment="Center" Canvas.Left="27" Canvas.Top="518" VerticalAlignment="Top">
                <Label Content="Steering oil" Width="72" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Brand" Width="42" HorizontalAlignment="Left" Canvas.Left="140" VerticalAlignment="Center"/>
                <TextBox x:Name="brand_steeringOil_textBox" TextWrapping="Wrap" Text="No" Width="88" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="215" Canvas.Top="4" VerticalAlignment="Center" TextChanged="brand_steeringOil_textBox_TextChanged"/>
                <TextBox x:Name="SteeringOil_spec_textBox" TextWrapping="Wrap" Text="No" Width="55" FontWeight="Bold" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Canvas.Left="72" Canvas.Top="4" VerticalAlignment="Center" BorderBrush="{x:Null}" TextChanged="SteeringOil_spec_textBox_TextChanged"/>

            </Canvas>
            <Label Content="Oil filter" Width="60" HorizontalAlignment="Left" Canvas.Left="360" Canvas.Top="495" VerticalAlignment="Center"/>
            <Label Content="Air filter" Width="60" HorizontalAlignment="Left" Canvas.Left="69" Canvas.Top="599" VerticalAlignment="Center"/>
            <Label Content="Cabin filter" Width="67" HorizontalAlignment="Left" Canvas.Left="265" Canvas.Top="599" VerticalAlignment="Center"/>
            <TextBox x:Name="oilFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="417" Canvas.Top="500" Width="55" BorderBrush="{x:Null}" TextChanged="oilFilter_texBox_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="cabinFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="370" Canvas.Top="603" Width="55" BorderBrush="{x:Null}" TextChanged="cabinFilter_texBox_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="airFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="147" Canvas.Top="603" Width="56" BorderBrush="{x:Null}" TextChanged="airFilter_texBox_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>
