            <Border BorderBrush="Black" BorderThickness="1" Height="95" Canvas.Left="165" Canvas.Top="45" Width="408" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Border BorderBrush="Black" BorderThickness="1" Height="58" Canvas.Left="20" Canvas.Top="584" Width="745" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="160" Canvas.Left="20" Canvas.Top="402" Width="745" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Date :" Width="40" HorizontalAlignment="Center" Canvas.Left="590" Canvas.Top="36" VerticalAlignment="Top"/>
