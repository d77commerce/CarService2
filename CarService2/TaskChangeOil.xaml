        <ComboBox HorizontalAlignment="Left" Margin="390,63,0,0" VerticalAlignment="Top" Width="120" Height="30" FontSize="16" AutomationProperties.HelpText="oil Specificatin"/>
        <TextBox HorizontalAlignment="Left" Margin="527,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="30" FontSize="18"/>
        <CheckBox Content="oil Filter" HorizontalAlignment="Left" Margin="679,65,0,0" VerticalAlignment="Top" Height="30"/>
        <CheckBox Content="Reset Computer" HorizontalAlignment="Left" Margin="310,297,0,0" VerticalAlignment="Top" FontSize="18" Width="192"/>
        <ComboBox HorizontalAlignment="Left" Margin="390,106,0,0" VerticalAlignment="Top" Width="120" Height="30" FontSize="16" AutomationProperties.HelpText="oil Specificatin"/>
        <TextBox HorizontalAlignment="Left" Margin="527,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="30" FontSize="18"/>
