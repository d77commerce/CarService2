            <Label Content="Gear box filter" Width="90" Canvas.Left="505" Canvas.Top="470" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="gearOilFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="604" Canvas.Top="474" Width="55" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="gearOilFilter_texBox_TextChanged"/>
            <Label Content="Mileas" Canvas.Left="615" Canvas.Top="433" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Restet sys" Width="65" Canvas.Left="350" Canvas.Top="470" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="reset_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="416" Canvas.Top="474" Width="56" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="reset_texBox_TextChanged"/>
            <Label Content="OIL" Canvas.Left="25" Canvas.Top="402" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Filters" Canvas.Left="22" Canvas.Top="581" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image Height="100" Canvas.Left="36" Canvas.Top="40" Width="100" Source="/PhotoRoom_20200618_144239_second-removebg-preview.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Order No:" Canvas.Left="167" Canvas.Top="56" Height="76" Width="163" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Mechanic Name : " Height="40" Canvas.Left="20" Canvas.Top="323" Width="280" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Task:" Canvas.Left="41" Canvas.Top="637" HorizontalAlignment="Center" VerticalAlignment="Top" Width="59" FontSize="24"/>
            <TextBox x:Name="description_textbox" Canvas.Left="24" TextWrapping="Wrap" Text="TextBox" Canvas.Top="685" Width="737" Height="368" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" TextChanged="description_textbox_TextChanged" Padding="11,0,5,0" BorderBrush="{x:Null}">
                <TextBox.CaretBrush>
                    <ImageBrush/>
                </TextBox.CaretBrush>
            </TextBox>
            <Label Content="Reg No :" Canvas.Left="582" Canvas.Top="114" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="RegNo_textBox" Canvas.Left="642" TextWrapping="Wrap" Text="WF15WNR" Canvas.Top="114" Width="125" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="18" FontWeight="Bold" Background="#FFDCCC19" TextAlignment="Center" TextChanged="RegNo_textBox_TextChanged"/>
            <Label Content="Owner :" Canvas.Left="459" Canvas.Top="204" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox_Owner_Commpany" Canvas.Left="542" TextWrapping="Wrap" Text="Oniqxs ltd" Canvas.Top="204" Width="238" HorizontalAlignment="Center" VerticalAlignment="Top"  FontSize="18" FontWeight="Bold" BorderBrush="{x:Null}" TextChanged="textBox_Owner_Commpany_TextChanged"/>
            <Label Content="Mileas :" Canvas.Left="586" Canvas.Top="151" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="textBox_milesStart" Canvas.Left="655" TextWrapping="Wrap" Text="10230" Canvas.Top="157" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="{x:Null}" TextChanged="textBox_milesStart_TextChanged" />
            <TextBox x:Name="maintenance_textBox" Canvas.Left="115" TextWrapping="Wrap" Text="Maintenance" Canvas.Top="649" Width="329" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" TextChanged="maintenance_textBox_TextChanged" BorderBrush="{x:Null}" FontWeight="Bold" VerticalContentAlignment="Center" Padding="14,0,0,0"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="389" Canvas.Left="22" Canvas.Top="679" Width="739"/>
            <TextBox x:Name="orderNo_textBox" Canvas.Left="330" TextWrapping="Wrap" Text="23110656789" Canvas.Top="59" Width="212" Height="58" FontSize="40" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="Black" TextChanged="orderNo_textBox_TextChanged"/>


        </Canvas>
    </Grid>
</Page>
