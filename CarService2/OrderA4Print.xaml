            <TextBox x:Name="gearOilFilter_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="604" Canvas.Top="474" Width="55" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="gearOilFilter_texBox_TextChanged"/>
            <Label Content="Mileas" Canvas.Left="615" Canvas.Top="433" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Restet sys" Width="65" Canvas.Left="350" Canvas.Top="470" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="reset_texBox" TextWrapping="Wrap" Text="No" FontWeight="Bold" HorizontalContentAlignment="Center" Height="18" Canvas.Left="416" Canvas.Top="474" Width="56" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="reset_texBox_TextChanged"/>
            <Label Content="OIL" Canvas.Left="20" Canvas.Top="379" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Filters" Canvas.Left="22" Canvas.Top="560" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image Height="100" Canvas.Left="36" Canvas.Top="40" Width="100" Source="/PhotoRoom_20200618_144239_second-removebg-preview.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Order No:" Canvas.Left="167" Canvas.Top="50" Height="76" Width="225" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="340012" Canvas.Left="383" Canvas.Top="52" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Top" Width="175" FontWeight="Bold"/>
            <Label Content="Mechanic Name : " Height="40" Canvas.Left="388" Canvas.Top="337" Width="280" FontSize="24"/>
            <Label Content="Task:" Canvas.Left="22" Canvas.Top="632" HorizontalAlignment="Left" VerticalAlignment="Center" Width="59" FontSize="24"/>
            <TextBox x:Name="maintenance_textbox" Canvas.Left="88" TextWrapping="Wrap" Text="maintenance" Canvas.Top="641" Width="590" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" TextChanged="maintenance_textbox_TextChanged" BorderBrush="{x:Null}" />
            <TextBox x:Name="description_textbox" Canvas.Left="20" TextWrapping="Wrap" Text="TextBox" Canvas.Top="673" Width="743" Height="380" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" TextChanged="description_textbox_TextChanged" BorderBrush="#FF0E0909">
                <TextBox.CaretBrush>
                    <ImageBrush/>
                </TextBox.CaretBrush>
            </TextBox>


        </Canvas>
    </Grid>
</Page>
